<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- ====== Restaurant ====== -->
    <!-- Form view of restaurant Orders-->
    <record id="restaurant_order_form_view" model="ir.ui.view">
        <field name="name">Restaurant Orders Form</field>
        <field name="model">sale.order</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="confirm_order" string="Confirm Order" class="btn-primary" type="object"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="lock_restaurant_order" type="object" string="Lock(Tạm tính)" class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                    <button name="unlock_sale_order" type="object" class="btn-primary" string="Unlock"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                    <button name="pool_table" type="object" string="Gộp bàn" class="oe_highlight"
                            context="{'action': 1}"/>
                    <button name="move_table" type="object" class="oe_highlight"
                            string="Chuyển bàn" context="{'action': 1}"/>
<!--                    <button name="splitting_table" type="object" string="Tách bàn" class="oe_highlight"-->
<!--                            context="{'action': 1}"/>-->
<!--                    <button name="validate_sale_order"-->
<!--                            string="Validate"-->
<!--                            class="btn-primary"-->
<!--                            type="object"-->
<!--                            attrs="{'invisible': ['|','|',('state', '!=', 'done'),('is_hotel_guest','=',False),('delivery_status', '!=', 'not delivered')]}"/>-->
<!--                    <button name="validate_sale_order"-->
<!--                            string="Create Receipt"-->
<!--                            class="btn-primary"-->
<!--                            type="object"-->
<!--                            attrs="{'invisible': ['|','|',('state', '!=', 'done'),('is_hotel_guest','=',True),('delivery_status', '!=', 'not delivered')]}"/>-->
                    <button name="print_provision_receipt"
                            string="Print Provision Receipt"
                            class="btn-primary"
                            type="object"
                            attrs="{'invisible': ['|',('state','!=','done'),('invoice_count','!=',0)]}"/>
                    <button name="print_bill"
                            string="Print Bill"
                            class="btn-primary"
                            type="object"
                            attrs="{'invisible': ['|',('state','!=','done'),('invoice_count','=',0)]}"/>
<!--                    <button name="open_account_payment_view" type="object" class="btn-primary" string="Payment Invoice"-->
<!--                            attrs="{'invisible': [('can_be_pay', '!=', True)]}"/>-->
                    <field name="state" select="2" widget="statusbar"
                           statusbar_visible="draft,sent,sale,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_folio_view"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-shopping-bag"
                            attrs="{'invisible': [('folio_id', 'in',[None, False] )]}">Folio
                        </button>
                        <button name="action_view_invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible': [('invoice_count', '=', 0)]}">
                            <field name="invoice_count" invisible="1"/>Invoices
                        </button>
                        <button type="object"
                            name="action_view_delivery"
                            class="oe_stat_button"
                            icon="fa-truck"
                            attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                            <field name="delivery_count" widget="statinfo" string="Delivery"/>
                        </button>
                    </div>
                    <label for="name" string="Restaurant Order No"/>
                    <h1>
                        <field name="name" colspan="4" readonly="1"/>
                    </h1>
                    <group colspan="4" col="4">
                        <field name="date_order" readonly="1"/>
                        <field name="warehouse_id" string="Warehouse"/>
                    </group>
                    <separator string="Order Info" colspan="4"/>
                    <group colspan="4" col="4">
                        <field name="user_id" string="Sale Person" readonly="1"/>
    <!--                    <field name="is_hotel_guest" string="Is Hotel Guest?" readonly="0"/>-->
                        <field name="order_type" string="Order Type" readonly="1"/>
                        <field name="folio_id"/>
    <!--                           attrs="{'invisible': [('is_hotel_guest','=',False)], 'required': [('is_hotel_guest','=',True)]}"-->
    <!--                           context="{'folio_display_name': True}"-->
    <!--                           options="{'no_create': 1, 'no_open': 1}"/>-->
                    </group>
                    <separator string="Customer Info" colspan="4"/>
                    <group colspan="4" col="4">
                         <field name="company_id" readonly="1" />
                        <field name="partner_id" string="Guest Name"
                               required="1" domain="[('customer','=',True)]"/>
    <!--                    <field name="partner_invoice_id"-->
    <!--                           domain="[('parent_id','=',partner_id)]"/>-->
                        <field name="pricelist_id"/>
    <!--                    <field name="partner_shipping_id"-->
    <!--                           domain="[('parent_id','=',partner_id)]"/>-->
    <!--                    <field name="payment_term_id" />-->
                        <field name="pos_hotel_restaurant_id" invisible="1"/>
                        <field name="delivery_status" invisible="1"/>
    <!--                    <field name="can_be_pay" invisible="1"/>-->
                    </group>
                    <!-- List table order view -->
                    <separator string="Table" colspan="4"/>
                    <field name="table_id" required="1"/>
    <!--                <group>-->
    <!--                    <field name="table_list" colspan="4" nolabel="1">-->
    <!--                        <tree>-->
    <!--                            <field name="name"/>-->
    <!--                            <field name="hotel_restaurant_area_id"/>-->
    <!--                        </tree>-->
    <!--                    </field>-->
    <!--                </group>-->
                    <!-- List restaurant order view -->
                    <separator string="List Order" colspan="4"/>
                    <group>
                        <field name="order_line" colspan="4" nolabel="1"
                               context="{'tree_view_ref': 'sea_hotel_restaurant.view_restaurant_order_line_tree_view_har'}"
                               attrs="{'readonly': [('state', 'in', ('done','cancel'))]}">
                            <!-- ====== Restaurant Order Line Tree View ====== -->
                            <tree editable="top">
                                <field name="product_id"
                                       domain="[('available_in_pos','=',True)]"/>
                                <field name="product_uom_qty" string="Initial Quantity"
                                       context="{'partner_id':parent.partner_id,'quantity':product_uom_qty,'pricelist':parent.pricelist_id,'uom':product_uom}"/>
                                <field name="qty_reserved" string="Quantity Done"/>
                                <field name="price_unit" string="Unit Price"/>
                                <field name="product_uom" string="Unit"/>
                                <field name="taxes_id" widget="many2many_tags"/>
                                <field name="price_total" string="Total"/>
                                <field name="remarks" string="Notes"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <group>
                            <field name="global_discount_type" groups="discount_account_invoice.group_order_global_discount" class="oe_inline" attrs="{'required' :[('global_order_discount', '>', 0.0)], 'readonly' : [('state', 'in', ['sale', 'done'])]}"/>
                            <field name="global_order_discount" groups="discount_account_invoice.group_order_global_discount" class="oe_inline" attrs="{'readonly' : [('state', 'in', ['sale', 'done'])]}"/>
                        </group>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <field name="amount_untaxed" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="amount_tax" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="total_discount" widget='monetary' groups="sale.group_discount_per_so_line, discount_account_invoice.group_order_global_discount" options="{'currency_field': 'currency_id'}"/>
                            <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                <label for="amount_total" />
                            </div>
                            <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
            </form>
        </field>
    </record>

    <!-- Tree view of restaurant Orders-->
    <record id="restaurant_order_tree_view" model="ir.ui.view">
        <field name="name">Restaurant Orders Tree</field>
        <field name="model">sale.order</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Order No"/>
                <field name="date_order" string="Order Date"/>
                <field name="partner_id" string="Customer"/>
<!--                <field name="table_list" widget="many2many_tags" string="Tables"/>-->
                <field name="table_id" />
                <field name="amount_total" string="Total"/>
                <field name="state" string="Status"/>
                <field name="order_type" invisible="1"/>
            </tree>
        </field>
    </record>
</odoo>